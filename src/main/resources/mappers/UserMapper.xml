<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.test.user.mapper.UserMapper">
    <insert id="userSignup">
        INSERT INTO t_user
        SET uid = #{uid}
            ,upw = #{upw}
            ,nm = #{nm}
    </insert>
    <select id="checkUpw">
        SELECT upw
        FROM t_user
        WHERE uid = #{uid}
    </select>

    <!--받아온 유저 pk값 체크-->
    <select id="checkUserPk">
        SELECT uid, upw, nm
        FROM t_user
        WHERE user_pk = #{userPK}
    </select>
    <!--받아온 유저 pk값 체크-->
</mapper>